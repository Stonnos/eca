<assembly>
    <id>bundle</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/target</directory>
            <outputDirectory>app</outputDirectory>
            <includes>
                <include>*.jar</include>
                <include>ECAManual.pdf</include>
                <include>eca-service-config.json</include>
                <include>lib/*</include>
                <include>images/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>app</outputDirectory>
            <includes>
                <include>eca.sh</include>
                <include>docs/data/*</include>
                <include>readme.txt</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>